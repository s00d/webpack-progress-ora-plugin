{
  "rules": {
    "no-undef": [2],
    "no-trailing-spaces": [0],
    "space-before-blocks": [2, "always"],
    "no-unused-expressions": [0],
    "no-underscore-dangle": [0],
    "quote-props": [1, "as-needed"],
    "no-multi-spaces": [0],
    "no-unused-vars": [1],
    "no-loop-func": [0],
    "key-spacing": [0],
    "max-len": [1, 200],
    "strict": [0],
    "eol-last": [1],
    "no-console": [1],
    "indent": [1, 2],
    "quotes": [1, "single", "avoid-escape"],
    "curly": [0]
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  }
}